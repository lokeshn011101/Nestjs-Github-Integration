<html lang='en'>

<head>
  <meta charset='UTF-8' />
  <meta http-equiv='X-UA-Compatible' content='IE=edge' />
  <meta name='viewport' content='width=device-width, initial-scale=1.0' />
  <title>Home</title>
  <style>
    form {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      width: fit-content;
      margin: 0 auto;
      padding: 10px 20px;
      padding-bottom: 30px;
      border: 1px solid black;
      border-radius: 2px;
    }

    input {
      width: 200px;
    }

    label {
      margin-top: 10px;
      width: 200px;
    }

    input[type='submit'] {
      margin-top: 10px;
    }

    h1,
    h2 {
      text-align: center;
    }

    h2 {
      margin-bottom: 10px;
      margin-top: 30px;
    }
  </style>
</head>

<body>
  <h1>Welcome {{user}}</h1>
  <h2>Create a repo</h2>
  <form action='/create_repo' method='POST' enctype='multipart/form-data' id="form1">
    <label for='name'>Repo Name:</label>
    <input type='text' name='repoName' id='name' required="required" pattern="[A-Za-z0-9]{1,20}" />
    <label for='file'>Add a file</label>
    <input type='file' name='file' id='file' />
    <input type='hidden' name='username' value={{user}} />
    <input type='submit' value="Create Repository" />
  </form>
  <h2>Delete a repo</h2>
  <form action='/delete_repo' method='POST'>
    <label for='name'>Repo Name:</label>
    <input type='text' name='repoName' id='name' required="required" pattern="[A-Za-z0-9]{1,20}" />
    <input type='hidden' name='username' value={{user}} />
    <input type='submit' value="Delete Repository" />
  </form>
</body>

</html>